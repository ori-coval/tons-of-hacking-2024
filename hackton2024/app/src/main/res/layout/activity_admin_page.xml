<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adminPage"
    android:background="@drawable/good_morning_img"
    android:layout_centerHorizontal="true">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="שם מטופל: תומר אהרון"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_marginTop="50dp"

        android:fontFamily="@font/gotham"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"/>

     <TextView
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginRight="10dp"
        android:text="גיל: 24"
         android:layout_centerHorizontal="true"
         android:textColor="#ffffff"
        android:textSize="35dp"
         android:layout_marginTop="40dp"
         android:fontFamily="@font/gotham"
        android:layout_gravity="center_horizontal"
         android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/ident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מאובחן כחובה התקפים"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/gotham"
        android:textSize="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="30dp"/>

    <TextView
        android:id="@+id/times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תדירות התקפים: גבוהה"
        android:textColor="#ffffff"
        android:fontFamily="@font/gotham"
        android:layout_marginRight="10dp"
        android:textSize="35dp"
        android:layout_marginVertical="30dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/midd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="עוצמת התקפים: בינוניים"
        android:fontFamily="@font/gotham"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:layout_marginVertical="30dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תסמינים: הפרעות בשינה, בעיות ריכוז, רגזנות "
        android:fontFamily="@font/gotham"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:layout_marginVertical="30dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>